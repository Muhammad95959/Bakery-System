generator client {
  provider        = "prisma-client"
  output          = "../src/generated/prisma"
  previewFeatures = ["views"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(uuid())
  username  String     @unique
  password  String
  role      Role       @default(STAFF)
  phone     String?
  address   String?
  status    UserStatus @default(ACTIVE)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  Order     Order[]

  @@map("users")
}

model Customer {
  id        String   @id @default(uuid())
  name      String
  email     String?  @unique
  phone     String?  @unique
  address   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("customers")
}

model Product {
  id        Int         @id @default(autoincrement())
  name      String
  category  String
  price     Decimal     @db.Decimal(8, 2)
  stock     Decimal     @db.Decimal(8, 2)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  image     String?
  OrderItem OrderItem[]

  @@map("products")
}

model Order {
  id            Int           @id @default(autoincrement())
  userId        String?
  status        OrderStatus   @default(PENDING)
  paymentMethod PaymentMethod @default(CASH)
  total         Decimal       @default(0) @db.Decimal(8, 2)
  createdAt     DateTime      @default(now())
  customer      String        @default("Customer")
  OrderItem     OrderItem[]
  user          User?         @relation(fields: [userId], references: [id])

  @@map("orders")
}

model OrderItem {
  id        Int      @id @default(autoincrement())
  productId Int?
  quantity  Int
  createdAt DateTime @default(now())
  orderId   Int
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product   Product? @relation(fields: [productId], references: [id])

  @@unique([productId, orderId])
  @@map("order_items")
}

view Cart {
  orderId  Int
  name     String
  price    Decimal @db.Decimal(8, 2)
  quantity Int
  image    String?

  @@map("cart_view")
}

enum Role {
  ADMIN
  STAFF
}

enum UserStatus {
  ACTIVE
  INACTIVE
}

enum OrderStatus {
  PENDING
  COMPLETED
  CANCELED
}

enum PaymentMethod {
  CASH
  CREDIT_CARD
  DEBIT_CARD
  BANK_TRANSFER
  MOBILE_WALLET
  ONLINE_PAYMENT
}
